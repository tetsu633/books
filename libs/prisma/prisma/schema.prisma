generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id        Int   @id @default(autoincrement())
  name      String
  type      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model Entry {
  id             Int   @id @default(autoincrement())
  amount         Int
  date           DateTime
  memo           String?
  userId         String
  entryType      String // "income" or "expense"
  categoryName   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  User           User     @relation(fields: [userId], references: [id])
}

model User {
  id        String     @id @default(uuid())
  name      String     
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Category  Category[]
  Entry     Entry[]
}
